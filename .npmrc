# NPM Configuration to fix GitHub Actions issues
fund=false
audit=false
progress=false
loglevel=warn
package-lock=true
save-exact=false
engine-strict=true

# Security and performance
prefer-offline=true
cache-max=86400000
registry=https://registry.npmjs.org/

# Disable optional dependencies that cause issues
optional=false

# Node.js compatibility
node-version=>=18.0.0

# GitHub Actions specific
ci=true