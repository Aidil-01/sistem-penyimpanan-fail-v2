rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for authenticated users to all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access for locations, files, users collections (for public viewing)
    match /locations/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /files/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /borrowing_records/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}